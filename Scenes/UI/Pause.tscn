script/source = "extends Control

func _process(_delta):
	if Input.is_action_just_pressed(\"pause\") and !get_parent().get_node(\"Dead\").visible:
		if !visible:
			$HBoxContainer/Retry.grab_focus()
			get_tree().paused = true
		else:
			get_tree().paused = false
		visible = !visible

func _on_Retry_pressed():
	Run.reset_run()
	BGM.stop()
	get_tree().paused = false
	get_tree().reload_current_scene()
	BGM.call_deferred(\"play\",\"stage\")


func _on_Exit_pressed():
	#assert(get_tree().change_scene(\"res://Scenes/Title/Title.tscn\") == OK)
	get_tree().change_scene(\"res://Scenes/Title/Title.tscn\")
"

